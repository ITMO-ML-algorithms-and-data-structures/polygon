#include <iostream>

void arrShuffle(int arr[], int size) {
    // Задаем сид рандомной функции
    srand(time(0)); // O(1)
    // Перемешиваем массив
    for (int i = 0; i < size; i++) // O(1)+O(1)+O(1)+O(1)
        std::swap(arr[i], arr[std::rand() % size]); 
    // от O(1) до O(N); обычно O(K) 1 < K < N
}

int main()
{
    const int size = 4; // O(1) + O(1)
    int arr[size]{ 1, 100, 10, 2 }; 
    arrShuffle(arr, size);
    //  Вывод элементов перемешанного массива        
    for (int i = 0; i < size; i++) // O(1)+O(1)+O(1)+O(1)
        std::cout << arr[i] << ","; // N = size
    return 0;
}
