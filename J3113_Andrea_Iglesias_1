#include <iostream>
#include <vector>

int main() 
{
    using namespace std;

    //Найти количество элементов в массиве, равных заданному числу.

    int rows, columns;
    int number, counter = 0;
    cout << "Number of rows: ";
    cin >> rows;
    cout << "Number of columns: ";
    cin >> columns;

    vector<vector<int>> matriz(rows, vector<int>(columns));

    cout << "Enter elements:" << endl;
    for (int i = 0; i < rows; ++i) {
        for (int j = 0; j < columns; ++j) {
            cout << "Element [" << i << "][" << j << "]: ";
            cin >> matriz[i][j];
        }
    }
    
    cout << "Enter number: ";
    cin >> number;

    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            if (matriz[i][j] == number) {
                counter++; 
            }
        }
    }

    cout << "The number " << number << " appears " << counter << " times in the matrix." << endl;
    return 0;
}
