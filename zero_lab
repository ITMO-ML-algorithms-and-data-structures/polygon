#include <iostream>
#include <vector>
#include <algorithm>

//hard- task: найти подмассив максимальной длины из повторяюзихся элементов

int main() {
    std::vector<int> data = {2, 4, 6, 7, 7, 7, 7, 7, 4, 4, 4, 4, 4, 4} ;
    int count_max=1;
    int count_now=1;
    for (size_t i = 0; i != data.size() - 1; ++i) {
        if (data[i] == data[i + 1]){
            count_now += 1;}
        else{
            if (count_now > count_max){
                count_max = count_now;}
            count_now = 1;}
        }
    if (count_now > count_max){
        count_max = count_now;}
    std:: cout << count_max << "\n";

//hard+ task: найти сумму макс подмассива

    int answer = 0;
    std::vector<int> data2 = {2, 3, 2,-9, 8, 8} ;
    int sum_now=0;
    int max_sum = 0;
    for (size_t i = 0; i != data2.size(); ++i) {
        sum_now = 0;
        for (size_t j = i; j != data2.size(); ++j){
            sum_now += data2[j];
            if (sum_now > max_sum) {
                max_sum = sum_now;}
        }
        }
    std:: cout << max_sum;
}
