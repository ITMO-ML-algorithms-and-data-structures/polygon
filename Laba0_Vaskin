#include <iostream>

int main() {
    setlocale(LC_ALL, "RU");
    int arr[] = { 3,4,5,2,3,3,4,52,12,6 };
    int size = sizeof(arr) / sizeof(arr[0]);
    const int len = 100;
    int enter[len] = { 0 };

    for (int i = 0; i < size; i++) {
        enter[arr[i]]++;
    }

    int sum = 0;
    for (int i = 0; i <= len; i++) {
        if (enter[i] >= 2)
            sum += i;
    }

    std::cout << "Сумма всех чисел, которые встречаются в массиве не менее двух раз: " << sum << std::endl;

}
