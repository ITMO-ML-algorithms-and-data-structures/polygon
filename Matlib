import matplotlib.pyplot as plt
import numpy as np

# Пути к файлам с данными
file_paths = [r"C:\Users\R1300-W-6-Stud\Downloads\shaker_execution_time1e4.txt", r"C:\Users\R1300-W-6-Stud\Downloads\merge_execution_time1e4.txt", r"C:\Users\R1300-W-6-Stud\Downloads\tree_execution_time1e4.txt"]

# Загрузка данных из файлов
data = []
for file_path in file_paths:
    with open(file_path, "r") as file:
        data.append([float(line.strip()) for line in file])

# Настройка позиций для боксплотов
positions = range(1, len(data) + 1)

# Построить бокс-плоты
fig, ax = plt.subplots()
VP = ax.boxplot(data, positions=positions, widths=0.6, patch_artist=True,
                showmeans=True, meanline=True,
                medianprops={"color": "white", "linewidth": 1.5},
                boxprops={"facecolor": "C0", "edgecolor": "black",
                          "linewidth": 1.0},
                whiskerprops={"color": "black", "linewidth": 1.0},
                capprops={"color": "black", "linewidth": 1.0})

# Настроить оси
ax.set(xlabel="Алгоритмы", ylabel="Время выполнения",
       title="Сравнение времени выполнения алгоритмов")
plt.xticks(positions, ["Алгоритм 1", "Алгоритм 2", "Алгоритм 3"])

plt.show()
