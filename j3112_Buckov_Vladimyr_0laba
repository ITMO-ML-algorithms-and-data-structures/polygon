//программа считает "Реальные" пары скобочек. Те программа работает корректно только при условии, что скобочки можно использовать единожды
//если  нужно было узнать все возможные варианты, то можно создать пустой список размером с строку S и на каждый порядковый номер элемента
// строки S, который будет являтся символом "(" можно прогнать вправо цикл и посчитать кол-во вхождений закрывающих скобок ")"
//тогда решение будет n^2, но можно поппробовать решить линейно, но тогда нужно будет разбить первое действие


//УСЛОВИЯ ЗАДАЧИ:(())
// Найти количество пар скобок(открытая и закрытая), корректно расположенных в строке

#include <iostream>
using namespace std;
int main()
{
    string s = "()())))())(())(((())))()(((((()(()())()()()()()()()))))(((((";
    //string s = "(())((";
    int c = 0;
    for (int i = 0; i < s.size(); i++)
    {
        char f = s[i];
        if (f == '(')
        {
            for (int j = i; j < s.size() - 1; j++)
            {
                char e = s[j + 1];
                if (e == ')')
                {
                    c++;
                    break;
                }
            }
        }

    }
    cout << c << endl;
    //2 решение через n^2
    string s1 = "(())((";
    int d = s.size();
    int cc = 0;
    for (int i = 0; i < d; i++)
    {
        if (s1[i] == '(')
        {
            for (int j = i; j < d; j++)
            {
                if (s1[j] == ')')
                {
                    cc++;
                }
            }
        }

    }
    cout << cc;
}
