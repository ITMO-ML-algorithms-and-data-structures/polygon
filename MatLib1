iimport matplotlib.pyplot as plt
import numpy as np

# Чтение данных из файла
data = np.loadtxt('C:\\Users\\admin\\Downloads\\tree_sort_times.txt')  # замените 'data.txt' на имя вашего файла

# Извлечение данных
num_variables = data[:, 0]  # Количество переменных (первый столбец)
time_algo1 = data[:, 1]     # Время выполнения первого алгоритма (второй столбец)
time_algo2 = data[:, 2]     # Время выполнения второго алгоритма (третий столбец)
time_algo3 = data[:, 3]     # Время выполнения третьего алгоритма (четвертый столбец)

# Построение графика
plt.figure(figsize=(10, 6))
plt.plot(num_variables, time_algo1, 'r--', label='Алгоритм 1')  # Красные пунктирные линии
plt.plot(num_variables, time_algo2, 'bs-', label='Алгоритм 2')  # Синие квадраты
plt.plot(num_variables, time_algo3, 'g^-', label='Алгоритм 3')  # Зеленые треугольники

# Добавление подписей и легенды
plt.xlabel('Количество переменных (OY)')
plt.ylabel('Время выполнения (сек)')
plt.title('Зависимость времени выполнения от количества переменных')
plt.legend()
plt.grid(True)

# Отображение графика
plt.show()
