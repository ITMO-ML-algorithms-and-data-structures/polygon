#include <iostream> 
using namespace std; 
 
int main() {  // главная функция 
 
    //string s = "))) () (())) ()"; // строковая переменная s 
    string s; 
    getline(cin,s); 
    cout << s; 
    int count = 0, ko = 0; //2 переменные целочисленные  
    for (int i = 0; i < s.length(); i++)  // i- переменная параметры, начинаем с 0, до s.length()-1 вкл, шаг +1 
    { 
        if (s[i] == '(') //проверяем элемент строки на открывающуюся скобку 
        { 
            ko++; //учитываем (ko=ko+1) 
        }  
        else if (s[i] == ')')  //проверяем элемент строки на закрывающуюся скобку 
        { 
            ko--; 
            if (ko >= 0) //т.к. мы закрыли скобку, нужно посчитать пару, если ko>=0, то сейчас все корректно (открытых >=закрытых) 
            { 
                count++; 
            }  
            else  
            { 
                ko = 0; //иначе обнуляем, чтобы дальше мы могли по-новой считать открытые скобки 
            } 
        } 
    } 
    string stringg=""; 
    cout << stringg << endl; 
    cout << count << endl; //вывод в консоль 
    return 0; 
}
