#include <iostream>
    
int main(){
    setlocale(LC_ALL, "Russian");
    int N,i;
    std::cout << "введите количество элементов массива: ";
    std::cin >> N;
    int *arr = new int[N];
    int kol_vo = 0;
    for (int i = 0; i < N; i++) {
        std::cout << "введите элемент массива: ";
        std::cin >> arr[i];
    }
    for (int i = 0; i < N; i++) {
        if (arr[i] > 0) {
            if (int(log2(arr[i])) == log2(arr[i])) {
                kol_vo += 1;
            }
        }
    } 
    std::cout << kol_vo;
    return 0;
}
