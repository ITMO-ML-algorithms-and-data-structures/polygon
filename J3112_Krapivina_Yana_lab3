#include <iostream>
#include <fstream>
#include <vector>
#include <random>
#include <algorithm>
using namespace std; 

// Функция для генерации случайной перестановки
vector<int> generateRandomPermutation(int n) {
    vector<int> permutation(n);
    iota(permutation.begin(), permutation.end(), 0); // Заполняем от 0 до n-1     O(n)
    random_device rd;
    mt19937 g(rd());
    shuffle(permutation.begin(), permutation.end(), g);        //O(n)
    return permutation;
}

int main() {
    string inputFileName = "";     //O(n)
    string outputFileName = "";
    int n = 1000000000;  //сколько входных значений

    // Читаем данные из файла
    ifstream inputFile(inputFileName);
    if (!inputFile.is_open()) {
        cerr << "Не удалось открыть файл " << inputFileName << std::endl;
        return 1;
    }

    vector<int> data(n);
    for (int i = 0; i < n; ++i) {        //O(n)
        inputFile >> data[i];
    }
    inputFile.close();

    // Генерируем случайную перестановку
    vector<int> permutation = generateRandomPermutation(n);     //O(n)

    // Перемешиваем массив, используя перестановку
    vector<int> shuffledData(n);
    for (int i = 0; i < n; ++i) {                            //O(n)
        shuffledData[i] = data[permutation[i]];
    }

    // Записываем перемешанные данные в файл
    ofstream outputFile(outputFileName);
    if (!outputFile.is_open()) {
        cerr << "Не удалось открыть файл " << outputFileName << std::endl;
        return 1;
    }

    for (int i = 0; i < n; ++i) {                       //O(n)
        outputFile << shuffledData[i] << " ";
    }
    outputFile.close();

    return 0;
}

//сложность всего алгоритма составляет O(n)









Код для датасета:
import random

numbers = [random.randint(0, 1000) for _ in range(1000000000)]

with open("random_numbers.txt", "w") as f:
    for number in numbers:
        f.write(str(number) + "\n")

print("Числа успешно записаны в файл random_numbers.txt")

